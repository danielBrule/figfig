{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "cwd": "${workspaceFolder}/src",  
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/.env.dev"
        },
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "cwd": "${workspaceFolder}/src",  
            "console": "integratedTerminal",
              "envFile": "${workspaceFolder}/.env.dev"
        }
    ]
}